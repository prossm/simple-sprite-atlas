{
  "name": "simple-sprite-atlas",
  "version": "1.0.0",
  "description": "Lightweight, secure sprite atlas generator for Phaser games with zero vulnerabilities",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "simple-sprite-atlas": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "phaser",
    "sprite-atlas",
    "texture-packer",
    "game-dev",
    "sprite-sheet",
    "atlas-generator",
    "phaser3",
    "game-development",
    "sprites"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prossm/simple-sprite-atlas.git"
  },
  "bugs": {
    "url": "https://github.com/prossm/simple-sprite-atlas/issues"
  },
  "homepage": "https://github.com/prossm/simple-sprite-atlas#readme",
  "dependencies": {
    "sharp": "^0.33.5",
    "glob": "^11.0.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
